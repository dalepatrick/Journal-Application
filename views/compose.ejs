<%- include('partials/header') %>

<h1>Compose</h1>
<form action="/compose" method="POST">
  <label for="postTitle">Title</label>
  <input type="text" class="form-control" name="postTitle" id="postTitle" placeholder="Enter title for your post">

  <br>

  <label for="postBody">Post</label>
  <textarea name="postBody" class="form-control" rows="10" placeholder="What is your post about?"></textarea>

  <br>

  <button type="submit" name="publishButton" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer') %>